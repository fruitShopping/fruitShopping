<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcf.fruit.dao.mysqlDao.content.ContentDao">

    <select id="getBusImg" resultType="ContentImgEntity">
        SELECT ci.* FROM ft_content_img ci
        LEFT JOIN ft_business b ON b.id=ci.content_id
    </select>

    <insert id="insert">
        INSERT INTO ft_content_img(content_id,img_path,sort,type)
        VALUES (#{contentId},#{imgPath},#{sort},#{type})
    </insert>
    <delete id="delete">
        DELETE FROM ft_content_img WHERE content_id=#{id}
    </delete>
</mapper>