<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcf.fruit.dao.mysqlDao.business.BusinessDao">
    <sql id="businessColumns">
        b.id,
        b.type,
        b.address,
        b.is_check AS isCheck,
        b.merchant_name AS merchantName
    </sql>
    <select id="get" resultType="BusinessEntity">
        SELECT
        <include refid="businessColumns"/>
        FROM ft_business b
        WHERE b.user_id=#{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ft_business (user_id,type,address,merchant_name)
        VALUES (#{user.id},#{type},#{address},#{merchantName})
    </insert>

    <update id="update">
        UPDATE ft_business SET
        type=#{type},
        address=#{address},
        merchant_name=#{merchantName}
        WHERE id=#{id}
    </update>
</mapper>